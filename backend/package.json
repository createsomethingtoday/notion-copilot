{
  "name": "notion-copilot-backend",
  "version": "1.0.0",
  "description": "Backend for Notion Copilot",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn src/index.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --config jest.e2e.config.ts",
    "test:migrations": "jest --config jest.migrations.config.ts",
    "test:load": "k6 run test/load/health.k6.js",
    "test:load:ci": "k6 run --out json=load-test-results.json test/load/health.k6.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "db:init": "ts-node src/scripts/init-db.ts",
    "db:migrate": "ts-node src/scripts/init-db.ts --migrate-only",
    "db:rollback": "ts-node src/scripts/init-db.ts --rollback",
    "db:migrate:test": "cross-env NODE_ENV=test ts-node src/scripts/init-db.ts --migrate-only",
    "db:rollback:test": "cross-env NODE_ENV=test ts-node src/scripts/init-db.ts --rollback"
  },
  "dependencies": {
    "@datadog/datadog-api-client": "^1.0.0",
    "@notionhq/client": "^2.2.0",
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.0.0",
    "openai": "^4.0.0",
    "redis": "^4.6.0",
    "socket.io": "^4.7.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/jest": "^29.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^18.0.0",
    "@types/supertest": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "mongodb-memory-server": "^8.0.0",
    "redis-memory-server": "^0.10.0",
    "supertest": "^6.0.0",
    "ts-jest": "^29.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.0"
  }
}
